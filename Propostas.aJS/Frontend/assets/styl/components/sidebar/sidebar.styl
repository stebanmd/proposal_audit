@import 'nib'
@import '../../utils.styl'

[data-component='sidebar']
	background-color $primary
	height 100%
	position relative
	.sidebar
		max-width 100%
		position absolute
		right 0
		top 195px
		width 250px
		+breakpoint( large-mobile )
			height auto
			padding 0
			position inherit
			top 0
			width 100%
		.list
			list-style none
			padding 0
			width 100%
			>.item
				background transparent
				cursor default
				overflow hidden
				padding 12px 20px
				position relative
				>.link
					color $secondary
					font 17px $font-ubuntu
					font-weight 500
					outline none
					position relative
					text-decoration none
					transition ease-in-out 500ms
					z-index 2
					cursor pointer
				&::after
					background $secondary
					content ''
					height 103%
					left 50%
					opacity 0
					position absolute
					top 50%
					transform translate( -50%, -50% )
					transition ease-in-out 300ms
					width 0
				&.active
					&::after
						opacity 1
						width 100%
					>.link
						color $white
